<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Tickets</title>
    <link rel="stylesheet" href="<%= basePath %>/css/style.css">
</head>
<body>
    <div class="container">
        <header class="app-header">
            <h1>Mis Tickets</h1>
             <nav>
                <a href="<%= basePath %>/">Escanear</a>
                <a href="<%= basePath %>/tickets" class="active">Mis Tickets</a>
                <a href="<%= basePath %>/productos">Productos</a>
            </nav>
        </header>

        <main>
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Buscar por establecimiento, fecha...">
            </div>

            <div id="tickets-list">
                <% if (tickets.length > 0) { %>
                    <% tickets.forEach(ticket => { %>
                        <a href="<%= basePath %>/ticket/<%= ticket.id %>"
                           class="ticket-card"
                           data-search-text="<%= (ticket.fields.Establecimiento || '').toLowerCase() %> <%= ticket.fields.Fecha || '' %>"
                           data-fecha="<%= ticket.fields.Fecha || '' %>">
                            <div class="ticket-info">
                                <span class="ticket-establecimiento"><%= ticket.fields.Establecimiento || 'Sin Establecimiento' %></span>
                                <span class="ticket-fecha"><%= ticket.fields.Fecha ? new Date(ticket.fields.Fecha).toLocaleDateString('es-ES') : 'Fecha no válida' %></span>
                                <span class="ticket-total"><%= (ticket.total || 0).toFixed(2) %> €</span>
                            </div>
                        </a>
                    <% }); %>
                <% } else { %>
                    <p class="no-tickets">Aún no has escaneado ningún ticket.</p>
                <% } %>
            </div>

            <% if (pagination.totalPages > 1) { %>
            <div class="pagination" id="pagination-controls">
                <div class="pagination-info">
                    Página <%= pagination.currentPage %> de <%= pagination.totalPages %>
                    (<%= pagination.totalTickets %> tickets en total)
                </div>
                <div class="pagination-buttons">
                    <% if (pagination.hasPrevPage) { %>
                        <a href="<%= basePath %>/tickets?page=<%= pagination.currentPage - 1 %>" class="pagination-btn">
                            ← Anterior
                        </a>
                    <% } else { %>
                        <span class="pagination-btn disabled">← Anterior</span>
                    <% } %>

                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <% if (i === pagination.currentPage) { %>
                            <span class="pagination-btn active"><%= i %></span>
                        <% } else if (i === 1 || i === pagination.totalPages || (i >= pagination.currentPage - 2 && i <= pagination.currentPage + 2)) { %>
                            <a href="<%= basePath %>/tickets?page=<%= i %>" class="pagination-btn"><%= i %></a>
                        <% } else if (i === pagination.currentPage - 3 || i === pagination.currentPage + 3) { %>
                            <span class="pagination-btn disabled">...</span>
                        <% } %>
                    <% } %>

                    <% if (pagination.hasNextPage) { %>
                        <a href="<%= basePath %>/tickets?page=<%= pagination.currentPage + 1 %>" class="pagination-btn">
                            Siguiente →
                        </a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Siguiente →</span>
                    <% } %>
                </div>
            </div>
            <% } %>
        </main>
    </div>
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let ticketsList = document.getElementById('tickets-list');
            let cards = Array.from(document.querySelectorAll('.ticket-card'));
            let paginationControls = document.getElementById('pagination-controls');

            // Si hay búsqueda, ocultar controles de paginación
            if (filter.length > 0 && paginationControls) {
                paginationControls.style.display = 'none';
            } else if (paginationControls) {
                paginationControls.style.display = 'block';
            }

            // Filtrar y ordenar
            let filteredCards = cards.filter(card => {
                let text = card.getAttribute('data-search-text');
                return text.includes(filter);
            });

            // Ordenar por fecha descendente (más recientes primero)
            filteredCards.sort((a, b) => {
                let dateA = new Date(a.getAttribute('data-fecha'));
                let dateB = new Date(b.getAttribute('data-fecha'));
                return dateB - dateA; // Orden descendente
            });

            // Ocultar todas las tarjetas primero
            cards.forEach(card => card.style.display = 'none');

            // Reorganizar el DOM con las tarjetas filtradas y ordenadas
            filteredCards.forEach(card => {
                card.style.display = '';
                ticketsList.appendChild(card);
            });

            // Añadir al final las tarjetas que no coinciden (ocultas)
            cards.forEach(card => {
                if (!filteredCards.includes(card)) {
                    ticketsList.appendChild(card);
                }
            });
        });
    </script>
</body>
</html>